{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
        "dist/",
        "views/test.json"
    ],
    "env": {
        "NODE_ENV": "development",
        "SERVICE_PORT": "4545"
    },
    "ext": "js json"
}
